{
    // VSCodium must set the PYTHONPATH.
    // https://stackoverflow.com/questions/53653083/how-to-correctly-set-pythonpath-for-visual-studio-code
    "terminal.integrated.env.osx": {"PYTHONPATH": "${workspaceFolder}"},
    "___________________________Rulers___________________________": "",
    "editor.rulers": [
        120
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "___________________________Themes___________________________": "",
    "workbench.colorTheme": "Visual Studio Light",
    "editor.tokenColorCustomizations": {
        // "functions": {
        //     "fontStyle": "italic bold",
        // },
        "textMateRules": [
            { // class def
                "scope": "storage.type.class.python",
                "settings": {
                    "fontStyle": "bold"
                }
            },
            { // class name
                "scope": "entity.name.type.class.python",
                "settings": {
                    "fontStyle": "bold"
                }
            },
            { // class self ref
                "scope": "variable.parameter.function.language.special.self.python",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            { // function def
                "scope": "storage.type.function.python",
                "settings": {
                    "fontStyle": "bold"
                }
            },
            { // function name
                "scope": "entity.name.function.python",
                "settings": {
                    "fontStyle": "bold"
                }
            },
            { // class init
                "scope": "support.function.magic.python",
                "settings": {
                    "fontStyle": "bold"
                }
            },
            { // decorator
                "scope": "entity.name.function.decorator.python",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            { // comments
                "scope": "comment.line.number-sign.python",
                "settings": {
                    // "foreground": "#0000008d",
                }
            },
        ]
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
}
